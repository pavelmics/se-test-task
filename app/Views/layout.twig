<!DOCTYPE html>
<html ng-app="skyeng" >
<head>
    {% block head %}
        <link rel="stylesheet" href="/static/main.css?{{ constant('STATIC_VERSION_HASH') }}" />
        <title>Skyeng</title>
    {% endblock %}

    {% block angular_base %}
        <base href="/app">
    {% endblock %}

</head>

<body>
    <div id="content" ng-controller="MainController">
        <!-- navbar -->
        <div class="container">
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="/">Skyeng</a>
                    </div>
                    <div id="navbar" class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li>
                                <a href="/teachers">Teachers</a>
                            </li>
                            <li>
                                <a href="/students">Students</a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle"
                                       data-toggle="dropdown"
                                       role="button" aria-haspopup="true"
                                       aria-expanded="false">
                                        Additional functions
                                    <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a href="/teachers/april">
                                            Teacher of april-born students
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            Two most common-students teachers
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        </ul>

                        <ul class="nav navbar-nav navbar-right"></ul>

                    </div>
                </div>
            </nav>
        </div><!-- end of navbar -->

        {% block content %}{% endblock %}
    </div>

    <div id="footer">
        {% block footer %}{% endblock %}
    </div>

    <script type="application/javascript" src="/static/main.js?{{ constant('STATIC_VERSION_HASH') }}"></script>
</body>
</html>